<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="largetext" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="generaltext" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_7sdp</item>
        <item name="android:layout_marginRight">@dimen/_7sdp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="smalltext" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_7sdp</item>
        <item name="android:layout_marginRight">@dimen/_7sdp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>


</resources>
